    <body>
        <h2>Tu veux ou tu veux pas</h2>
        <h1>{{survey}}</h1>
        <ul class="answers">
            {{#answers}}
            <li {{^answer}}class="no"{{/answer}}>{{name}} veut{{^answer}} pas{{/answer}}</li>
