        <form method="POST" action="/answer">
            <input type="hidden" name="key" value="{{key}}" />
            <input name="name" placeholder="nom" required />
            <input type="radio" name="answer" value="yes" required/>je veux
            <input type="radio" name="answer" value="no" required/>je veux pas
